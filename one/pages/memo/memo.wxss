/**index.wxss**/
.header{
  text-align: center;
  font-size: 40rpx;
  color: #ae9e84;
  margin-bottom: 40px;
  width:100%;
  position:relative;
  height:50px;
  padding: 60rpx 0rpx 0rpx 0rpx;
}
.header::after{
  content:'ONE鸡';
  position: absolute;
  width: 20rem;
  z-index: 1;
  text-align: center;
  color: rgba(225,225,225,0.5);
  font-size: 120rpx;
  left: 0;
  bottom:-50px;
}
.logo{
    width: 100%;
    height: 295rpx;
    background-color:#e6e6e6;
    position: relative

}
 .one{
    top: 47.5rpx;
    width: 200rpx;
    height: 200rpx;
    position: absolute;
 }
/*输入区域*/
.input-wrap{  
  margin: 30rpx 10rpx;
}
.flex-row{
  display: flex;
  margin: 10rpx 0;
  width: 670rpx;
  -webkit-box-pack: justify;
  align-items:center;
}
.pick-date{ 
  flex:1;  
  vertical-align: middle;
  margin-top:10px;
}
.date{
  color: #777;
  font-size:16px;
  Text-indent:40px；
}

.switch{
  transform: scale(0.5);
  vertical-align: middle;
  color: #ffa07a;
}
.btn{  
  border-radius: 5px;
  font-size: 30rpx;
  line-height: 100rpx;
  display: block;
  background: #ffa07a;
}
.btn-submit{
  color: #fff;
  flex: 1;
  margin-right:10rpx;
}
.btn-hover{
  background: #ffa07a;
}
.btn-cancel{
  background: #ffa07a;
}
input,button{font-family: inherit}
.ipt-main{
  border: 1rpx solid #e1e1e1;
  border-radius: 5px;
  height: 80rpx;
  padding: 10rpx 15px;
  font-size: 30rpx;
  width: 610rpx;
  display: block;
}

/*展示列表区域*/
.list-wrap{
	text-align:left;
	width:670rpx;
  margin: 0 auto;	
   background: #fff;
  border:1px solid #e2e2e2;
  position:relative;
  border-radius:0 0 5rpx 5rpx;
}
.list{
  padding:10px;
  position:relative;
  background: #fdf5e6;
}
.done{
  background: #fff;
  color:#ccc;
}
.ico-done{
  position: absolute;
  right: 80rpx;  
}
.done .ico-done{color: red}
.ico-delete{
	position:absolute;
	right:10rpx;
}	
.red{
  color: red;
}
.cnt{
  width: 400rpx;
}
/*修改*/
.edit-wrap{
  position: absolute;
  background: #fff;
  left: 20px;
  height: 100%;
  width: 91%;
  top: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  padding: 6rpx;
}
.ipt-edit{
  flex:1;
  border: 1rpx solid #ddd;
  border-radius: 3px;
  padding: 5rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
}
.btn-edit{
  line-height: 60rpx;
  font-size: 24rpx;
  color: #fff;
  height: 60rpx;
}

/*列表地步操作区*/
.footer{
  display: flex;
  justify-content:space-between;
  font-size: 24rpx;
  color: #ffa07a;
  border-top: 1px solid #eee;
}
.ft-action{
  color: #ffa07a; 
  margin: 0 10rpx;
}
.ft-area{  
  padding: 20rpx;
 text-align:center;
}
.ft-mid{
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  flex:1;
}


.mt{
  margin-top: 100rpx;
}
.btn-save{
  width:300rpx;
  color: #fff;
}
.voiceHidden{visibility: hidden}
